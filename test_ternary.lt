# Test ternary operator
x := 10

# Basic ternary
result := x > 5 ? "big" : "small"
print("x > 5 ? 'big' : 'small' = ${result}")
assert(result == "big", "Ternary should return 'big'")

# Ternary with false condition
y := 3
result2 := y > 5 ? "big" : "small"
print("y > 5 ? 'big' : 'small' = ${result2}")
assert(result2 == "small", "Ternary should return 'small'")

# Nested ternary
z := 7
result3 := z > 10 ? "large" : (z > 5 ? "medium" : "small")
print("Nested ternary = ${result3}")
assert(result3 == "medium", "Nested ternary should work")

print("âœ“ All ternary tests passed!")
stop 0
