# Test division by zero error handling

print("Testing division by zero...")

try {
    result := 10 / 0
    print("ERROR: Should have caught division by zero!")
} catch e {
    print("✓ Division by zero caught: ${e}")
}

# Test modulo by zero
try {
    result := 10 % 0
    print("ERROR: Should have caught modulo by zero!")
} catch e {
    print("✓ Modulo by zero caught: ${e}")
}

print("\n=== Division by zero handling works! ===")
stop 0
